.message
  .message__upper-info
    %p.message__upper-info__talker
      = message.user.name
    %p.message__upper-info__data
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__lower-info
    - if message.text.present?
      %p.message__lower-info__text
        = message.text
    = image_tag message.image.url, class: 'message__lower-info__image' if message.image.present?