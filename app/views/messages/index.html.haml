%body
  .flash-box
    グループを作成しました
  .wrapper
    .chat-side
      .side-header
        .side-header__box
          %p.side-header__box__user-name test_user
          %ul.side-header__box__menu
            %li.side-header__box__menu__new-group
              =link_to "#" do
                %i.fa.fa-edit
            %li.side-header__box__menu__edit-user
              =link_to "#" do
                %i.fa.fa-cog
      .groups
        .group
          =link_to "#" do
            %p.group__group-name test-group
            %p.group__latest-message さようなら
        .group
          =link_to "#" do
            %p.group__group-name sample-group
            %p.group__latest-message hello!
        .group
          =link_to "#" do
            %p.group__group-name example
            %p.group__latest-message まだメッセージがありません
        
    .chat-main
      .main-header
        .main-header__left-box
          %h2.main-header__left-box__current-group test-group
          %ul.main-header__left-box__member-list
            Member：
            %li.main-header__left-box__member-list__member test_user
            %li.main-header__left-box__member-list__member user02
        =link_to "#" do
          .main-header__edit-btn Edit
      .messages
        .message
          .message__upper-info
            %p.message__upper-info__talker test_user
            %p.message__upper-info__data 2019/08/13(mon) 00:00:00
          %p.message__text こんにちは！
        .message
          .message__upper-info
            %p.message__upper-info__talker test_user
            %p.message__upper-info__data 2019/08/13(mon) 00:00:00
          %p.message__text さようなら
      .form
        %form#new_message.new_message{enctype: "multipart/form-data", action: "#", method: "post"}
          .input-box
            %input#message_content.input-box__text{name: "message[content]" ,type: "text", placeholder: " type a message"}
            %label.input-box__image{for: "message_image"}
              %i.fa.fa-image
              %input.input-box__image__file{name: "message[image]", type: "file", id: "message_image"}
          %input.submit-btn{name: "commit", value: "Send"}
